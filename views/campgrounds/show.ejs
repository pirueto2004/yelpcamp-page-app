<% include ../partials/header %>

<div class="container show">
    <div class="row justify-content-center ">
        <div class="col-12 col-lg-3">
            <p class="lead">YelpCamp</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        <div class="col-12 col-lg-9 mt-4">
            <div class="card my-4">
                <div class="card-body">
                        
                        <img src="<%= campground.image %>" class="img-fluid" width="100%">
                </div>
                <div class="caption p-3">
                    <h4 class="float-right">$9.99/night</h4>
                    <h4 class="float-left"><a href=""><%= campground.name %></a></h4>
                </div>
                
                <div class="card-text p-3 mb-2">
                        <p><%= campground.description %></p>
                </div>
                
            </div>

            <div class="card p-3 mb-4" style="background-color: gainsboro;">
                <div class="text-right"><a class="btn btn-success ml-4 my-2" href="/campgrounds/<%= campground._id %>/comments/new">Add New Comment</a></div>
                <hr>
                <% campground.comments.forEach(function(comment){ %>
                    <div class="row">
                        <div class="col-12">
                            <strong><%= comment.author %></strong>
                            <span class="float-right">10 days ago</span>
                            <p><%= comment.text %></p>
                        </div>
                    </div>
                <% }) %> 
            </div>
            
            
        </div>
    </div>
    
</div>


<% include ../partials/footer %>