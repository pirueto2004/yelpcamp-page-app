<% include ./partials/header %>
    

    <div class="container">
        <header class="jumbotron text-center my-4">
            <div class="container">
                <h1>Welcome To YelpCamp!</h1>
                <p>View our hand-picked campgrounds from all over the world</p>
                <p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campground</a>
                </p>
            </div>
        </header>

        <div class="row px-3">
            <div class="col-12 bg-light mb-2">
                <h3>Our Most Popular Campgrounds!</h3>
            </div>
        </div>

        <div class="row text-center" style="display: flex; flex-wrap: wrap;">
            <% campgroundsData.forEach(function(campground){ %>
                <div class="col-md-3 col-sm-6">
                    <div class="img-thumbnail">
                       <img src="<%= campground.image %>"  class="img-fluid" width="500">
                       <div class="caption">
                            <h6><%= campground.name %></h6>
                       </div>
                       <p>
                          <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
                       </p>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
<% include ./partials/footer %>