<% include ../partials/header %>

<div class="container ">
    <h1 class="text-center my-5">Add New Comment to <%= campground.name %></h1>
    <div class="row d-flex justify-content-center">
        <div class="col-sm-6">
            <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="text">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[author]" placeholder="author">
                </div>
                
                <div class="form-group">
                    <button class="btn btn-info btn-block">Submit</button>
                </div>
            </form> 
            <a class="btn btn-primary btn-sm" href="/campgrounds">Go Back</a>  
        </div>    
    </div>
    
</div>

<% include ../partials/footer %>