<% include ../partials/header %>

<div class="container show1">
    <div class="row d-flex justify-content-center">
        <div class="col-12 col-lg-8">
            <div class="card my-4 ">
                <div class="card-body">
                    <h1 class="card-title text-center my-5">Add New Comment to <%= campground.name %></h1>
            
                    <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
                        <div class="form-group">
                            <input class="form-control" type="text" name="comment[text]" placeholder="text">
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="text" name="comment[author]" placeholder="author">
                        </div>
                        
                        <div class="form-group">
                            <button class="btn btn-info btn-block">Submit</button>
                        </div>
                    </form> 
                    
                </div>
                <div class="card-footer">
                        <a class="btn btn-primary btn-sm" href="/campgrounds">Go Back</a> 
                </div> 
            </div>    
        </div>
    </div>
</div>

<% include ../partials/footer %>