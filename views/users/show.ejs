<% include ../partials/header %>
    <div class="container show">
        <div class="row text-center">
            <div class="col-12 mt-4 text-white">
                <h2>User Profile Card</h2>
            </div>
        </div>
        <div class="row d-flex justify-content-center">
            <div class="col-12 col-lg-9 mt-4 ">
                    â€‹<div class="card profile-card p-0">
                        
                            <img class="card-img-top" src="<%= user.avatar %>" width=alt="user profile image">  
                            <h1><%= user.firstName + " " + user.lastName %></h1>
                            <p class="profile-title">CEO & Founder, Example</p>
                            <p>Harvard University</p>
                            <a href="mailto:<%= user.email %>"><%= user.email %></a> 
                            <div class="card-body" style="margin: 24px 0;">
                                <h3><%= user.username %>'s campgrounds</h3>
                              <% campgrounds.forEach(function(campground){ %>
                                <ul class="text-left">
                                  <li><a href="/campgrounds/<%= campground.id %>"><%= campground.name %></a></li>
                                </ul>
                              <% }); %>
                            </div>
                            <p><button class="profile-button mb-0">Contact</button></p>
                    </div>
            </div>
        </div>
    </div>
    
<% include ../partials/footer %>