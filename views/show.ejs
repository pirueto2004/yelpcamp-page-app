<% include ./partials/header %>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-6">
            <div class="card my-4">
                <div class="card-body">
                        <div class="card-title"><h2><%= campground.name %></h2></div>
                        <img src="<%= campground.image %>" class="img-fluid" width="500">
                        
                </div>
                <div class="card-footer">
                        <p class="py-3"><%= campground.description %></p>
                </div>
                <div class="card-text p-4">
                    <% campground.comments.forEach(function(comment){ %>
                        <p>
                            <strong><%= comment.author %></strong> - <%= comment.text %>
                        </p>
                    <% }) %> 
                </div>
                
            </div>
            
        </div>
    </div>
    
</div>


<% include ./partials/footer %>